{
	"name": "flinteditor",
	"displayName": "FlintEditor",
	"publisher": "pim",
	"description": "",
	"version": "0.5.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.run",
		"onView:flintActTree",
		"onView:flintFactTree",
		"onLanguage:json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "FLINT editor",
			"properties": {
				"flinteditor.run_configuration": {
					"description": "Run configurations for FLINT models",
					"type": "object",
					"scope": "resource"
				}
			}
		},
		"commands": [
			{
				"command": "extension.run",
				"title": "Run Flint"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "**.flint.json",
				"url": "./schemas/flint.schema.json"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "flint-tree",
					"title": "Flint Tree",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"flint-tree": [
				{
					"id": "flintActTree",
					"name": "Acts"
				},
				{
					"id": "flintFactTree",
					"name": "Facts"
				},
				{
					"id": "flintDutyTree",
					"name": "Duties"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"package": "rm -rf ./build || echo 'No build folder present'; cp -r ./node_modules/@discipl/compliance-by-design/build/ ./ && vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"@discipl/compliance-by-design": "^0.2.1",
		"@discipl/law-reg": "^0.5.3",
		"jsonc-parser": "^2.1.1"
	}
}
